<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ChatAAC.ViewModels"
        x:Class="ChatAAC.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="ChatAAC" Width="1280" Height="960">

    <Window.Styles>
        <Style Selector="Button.category">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style Selector="Button.symbol">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="120"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style Selector="Button.control">
            <Setter Property="Height" Value="40"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,Auto,*" Margin="20">
        <!-- Message Display Area -->
        <Border Grid.Row="0" Height="100" Margin="0,0,0,20"
                BorderBrush="Gray" BorderThickness="1" CornerRadius="10">
            <ScrollViewer HorizontalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding SelectedPictograms}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Image Source="{Binding ImagePath}" Width="80" Height="80" Margin="5"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Categories -->
        <UniformGrid Grid.Row="1" Rows="1" Margin="0,0,0,20">
            <Button Classes="category" Background="#FFE5CC">
                <StackPanel>
                    <TextBlock Text="Pronoun" HorizontalAlignment="Center" FontWeight="Bold"/>
                    <Image Source="/Assets/avalonia-logo.ico" Width="60" Height="60"/>
                </StackPanel>
            </Button>
            <Button Classes="category" Background="#FFD699">
                <StackPanel>
                    <TextBlock Text="People" HorizontalAlignment="Center" FontWeight="Bold"/>
                    <Image Source="/Assets/avalonia-logo.ico" Width="60" Height="60"/>
                </StackPanel>
            </Button>
            <Button Classes="category" Background="#C6E2C6">
                <StackPanel>
                    <TextBlock Text="Actions" HorizontalAlignment="Center" FontWeight="Bold"/>
                    <Image Source="/Assets/avalonia-logo.ico" Width="60" Height="60"/>
                </StackPanel>
            </Button>
            <Button Classes="category" Background="#B3D9FF">
                <StackPanel>
                    <TextBlock Text="Describing" HorizontalAlignment="Center" FontWeight="Bold"/>
                    <Image Source="/Assets/avalonia-logo.ico" Width="60" Height="60"/>
                </StackPanel>
            </Button>
            <Button Classes="category" Background="#FFCCCC">
                <StackPanel>
                    <TextBlock Text="Short Words" HorizontalAlignment="Center" FontWeight="Bold"/>
                    <Image Source="/Assets/avalonia-logo.ico" Width="60" Height="60"/>
                </StackPanel>
            </Button>
            <Button Classes="category" Background="#E5CCE5">
                <StackPanel>
                    <TextBlock Text="Places" HorizontalAlignment="Center" FontWeight="Bold"/>
                    <Image Source="/Assets/avalonia-logo.ico" Width="60" Height="60"/>
                </StackPanel>
            </Button>
            <Button Classes="category" Background="#E5E5E5">
                <StackPanel>
                    <TextBlock Text="Time" HorizontalAlignment="Center" FontWeight="Bold"/>
                    <Image Source="/Assets/avalonia-logo.ico" Width="60" Height="60"/>
                </StackPanel>
            </Button>
        </UniformGrid>

        <!-- Main Content Grid -->
        <Grid Grid.Row="2" ColumnDefinitions="*,Auto">
            <!-- Symbols Grid -->
            <ItemsControl Grid.Column="0" ItemsSource="{Binding Pictograms}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Classes="symbol" Background="White">
                            <StackPanel>
                                <Image Source="{Binding ImagePath}" Width="80" Height="80"/>
                                <TextBlock Text="{Binding Text}" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Side Panel -->
            <StackPanel Grid.Column="1" Width="200" Margin="20,0,0,0" Spacing="10">
                <!-- Grammar Controls -->
                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Padding="10">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Grammar Settings" FontWeight="Bold"/>
                        
                        <StackPanel>
                            <TextBlock Text="Tense:"/>
                            <StackPanel Orientation="Vertical">
                                <RadioButton Content="Present" IsChecked="True"/>
                                <RadioButton Content="Past"/>
                                <RadioButton Content="Future"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <StackPanel>
                            <TextBlock Text="Form:"/>
                            <StackPanel Orientation="Vertical">
                                <RadioButton Content="Statement" IsChecked="True"/>
                                <RadioButton Content="Question"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Control Buttons -->
                <Button Content="Back" Classes="control" Background="#2196F3"/>
                <Button Content="Clear" Classes="control" Background="#4CAF50"/>
                <Button Content="Settings" Classes="control" Background="#9C27B0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>